/*
14. Comente seu código explicando o que cada parte faz. Crie um 
programa simples que calcule a soma de dois números e imprima o resultado.
*/

let parcela1 = 100; // Declaração e atribuição do primeiro número
let parcela2 = 0.2; // Declaração e atribuição do segundo número
let resultado; // Declaração da variável que armazenará a soma entre os números

resultado = parcela1 + parcela2; // Atribuição da soma à variável resultado

alert(`A soma entre ${parcela1} e ${parcela2} é: ${resultado}`); // Exibição da soma utilizando concatenação
